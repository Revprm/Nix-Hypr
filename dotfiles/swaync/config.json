{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "center",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 10,
  "control-center-margin-right": 15,
  "control-center-margin-left": 15,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-icon-size": 20,
  "notification-body-image-height": 80,
  "notification-body-image-width": 80,
  "notification-window-width": 380,
  "timeout": 8,
  "timeout-low": 4,
  "timeout-critical": 0,
  "fit-to-screen": false,
  "control-center-width": 420,
  "control-center-height": 650,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 150,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "dnd",
    "title",
    "buttons-grid",
    "mpris",
    "volume",
    "backlight",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "╭─ Notifications ─╮",
      "clear-all-button": true,
      "button-text": "[ Clear All ]"
    },
    "dnd": {
      "text": "┌─ Do Not Disturb ─┐"
    },
    "label": {
      "max-lines": 2,
      "text": "├─ System ─┤"
    },
    "mpris": {
      "image-size": 50,
      "image-radius": 12,
      "blur": false
    },
    "volume": {
      "label": "├─ 󰕾 Volume ─┤"
    },
    "backlight": {
      "label": "├─ 󰃟 Brightness ─┤"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "[ 󰐥 Power ]",
          "command": "bash -c $HOME/.config/hypr/scripts/Wlogout.sh"
        },
        {
          "label": "[ 󰌾 Lock ]",
          "command": "bash -c $HOME/.config/hypr/scripts/LockScreen.sh"
        },
        {
          "label": "[ 󰍃 Exit ]",
          "command": "hyprctl dispatch exit"
        },
        {
          "label": "[ 󰀝 Airplane ]",
          "command": "bash -c $HOME/.config/hypr/scripts/AirplaneMode.sh"
        },
        {
          "label": "[ 󰝟 Mute ]",
          "command": "$HOME/.config/hypr/scripts/Volume.sh --toggle"
        },
        {
          "label": "[ 󰂯 Bluetooth ]",
          "command": "blueman-manager"
        }
      ]
    }
  }
}
